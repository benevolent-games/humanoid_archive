{
	"name": "@benev/humanoid",
	"description": "",
	"version": "0.0.0-dev.0",
	"license": "MIT",
	"type": "module",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"files": [
		"x",
		"s"
	],
	"main": "x/index.js",
	"scripts": {
		"postinstall": "if test -z \"$HUMANOID_IGNORE_DEV_POSTINSTALL\"; then run-p hack-babylon; fi",
		"build": "run-s clean && run-p compile importly && run-s test bundle minify",
		"hack-babylon": "rimraf node_modules/@babylonjs/core/index.d.ts node_modules/@babylonjs/core/index.js",
		"clean": "rimraf x && mkdirp x",
		"links": "run-s link-s link-modules link-assets",
		"link-s": "ln -s $(realpath s) x/s",
		"link-modules": "ln -s $(realpath node_modules) x/node_modules",
		"link-assets": "ln -s $(realpath assets) x/assets",
		"link-toolbox": "rimraf node_modules/@benev/toolbox && ln -s $(realpath ../toolbox) node_modules/@benev",
		"compile": "run-p links sass && run-s typescript web",
		"typescript": "tsc",
		"importly": "importly < package-lock.json > x/importmap.json",
		"bundle": "rollup x/demo.js -p @rollup/plugin-node-resolve --format es --file x/demo.bundle.js",
		"minify": "terser x/demo.bundle.js -cm --source-map --comments false -o x/demo.bundle.min.js",
		"sass": "sass s/web/templates/:x/",
		"web": "node x/web/build.js",
		"watch-sass": "npm run sass -s -- --watch",
		"watch-typescript": "tsc -w",
		"watch-web": "chokidar \"x/web/**/*\" -c \"npm run web -s && echo 'rebuilt web'\"",
		"watch": "run-p watch-sass watch-typescript watch-web",
		"http": "http-server x",
		"start": "run-p http watch",
		"test": "cynic node x/tests.test.js"
	},
	"keywords": [],
	"dependencies": {
		"@babylonjs/core": "^5.51.0",
		"@babylonjs/loaders": "^5.51.0",
		"@benev/nubs": "^0.2.4",
		"@benev/toolbox": "^0.3.1",
		"@chasemoskal/magical": "^0.1.3",
		"ammojs-typed": "^1.0.6",
		"es-module-shims": "^1.7.0",
		"lit": "^2.6.1",
		"sparrow-rtc": "^0.0.0-dev.6",
		"xiome": "^0.0.41"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^15.0.1",
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
		"cynic": "^0.2.0",
		"http-server": "^14.1.0",
		"importly": "^0.2.0",
		"mkdirp": "^2.1.5",
		"npm-run-all": "^4.1.5",
		"rimraf": "^4.4.0",
		"rollup": "^3.20.0",
		"sass": "^1.59.3",
		"terser": "^5.16.6",
		"typescript": "^5.0.2"
	}
}
